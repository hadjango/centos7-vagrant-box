{
	"description": "Basic Centos 7 x86_64 virtualbox vagrant build",
	"min_packer_version": "0.8.0",
	"builders": [
		{
			"boot_command": [
				"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
			],
			"boot_wait": "5s",
			"communicator": "ssh",
			"disk_size": 40000,
			"guest_additions_path": "VBoxGuestAdditions.iso",
			"guest_os_type": "RedHat_64",
			"headless": true,
			"http_directory": "http",
			"iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
			"iso_checksum_type": "sha256",
			"iso_url": "http://ftp.osuosl.org/pub/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
			"output_directory": "../packer-boxes/centos7-vagrant-box/",
			"shutdown_command": "echo 'vagrant'|sudo -S shutdown -t5 -h now",
			"ssh_password": "vagrant",
			"ssh_port": 22,
			"ssh_timeout": "60m",
			"ssh_username": "vagrant",
			"type": "virtualbox-iso",
			"vboxmanage": [
				[
					"modifyvm",
					"{{.Name}}",
					"--cpus",
					"1"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--memory",
					"1024"
				]
			],
			"virtualbox_version_file": ".vbox_version",
			"vm_name": "centos7-vagrant-box"
		}
	],
	"post-processors": [
		{
			"compression_level": 9,
			"keep_input_artifact": false,
			"output": "centos7-vagrant-box.box",
			"type": "vagrant"
		}
	],
	"provisioners": [
		{
			"execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
			"scripts": [
				"shell/setup",
				"shell/sudoers",
				"shell/user_vagrant",
				"shell/aliases",
				"shell/vbox",
				"shell/cleanup"
			],
			"type": "shell"
		}
	]
}
